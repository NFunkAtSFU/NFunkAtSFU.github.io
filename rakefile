# This is needed to produce the date
require 'date'
time = Time.new

# All rakefiles have a default task.
task default: %w[post]
desc 'create a new draft post'
task :post do
  title = ENV['TITLE']
  slug = "#{Date.today}-#{title.downcase.gsub(/[^\w]+/, '-')}"

  file = File.join(
    File.dirname(__FILE__),
    '_posts',
    slug + '.md'
  )

  File.open(file, "w") do |f|
    f << <<-EOS.gsub(/^    /, '')
---
title: #{title}
categories:
---

    EOS
  end

  system ("#{ENV['EDITOR']} #{file}")
end